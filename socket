import socket

raw_url = 'https://pythonworld.ru'

if 'https://' in raw_url:
    PORT = 433
    task_url = raw_url[8:]
elif 'http://' in raw_url:
    PORT = 80
    task_url = raw_url[7:]

HOST = socket.gethostbyname(task_url)
print(HOST)

_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
print(_socket.getadrrinfo((HOST, PORT)))
_socket.connect((HOST, PORT))

